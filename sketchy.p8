pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
pen_x = 50
cursor_y = 80
pen_width = 10
pen_down = true
pendown_colour = 7  -- Normally 7 (White)
penup_colour = 0  -- Normally 0 (Black)

function _init()
   -- Nothing to go here yet...
end

function _update()
   -------------------------------------------------------
   -- Should I move the cursor?
   -------------------------------------------------------
   if (btnp(0)) pen_x -= 1   -- Left?
   if (btnp(1)) pen_x += 1   -- Right?
   if (btnp(2)) cursor_y -= 1   -- Up?
   if (btnp(3)) cursor_y += 1   -- Down?
   
   -------------------------------------------------------
   -- Toggle pen up/down?
   -------------------------------------------------------
   if (btnp(4)) do
      pen_down = not pen_down
      
   end
   
end

function _draw()
   cls()
   
   if (pen_down) then
      rectfill(pen_x,cursor_y,pen_x+(pen_width-1),cursor_y+(pen_width-1),pendown_colour)
      
   else
      rectfill(pen_x,cursor_y,pen_x+(pen_width-1),cursor_y+(pen_width-1),penup_colour)
      
   end
end



